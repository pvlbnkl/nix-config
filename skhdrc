cmd - return : open -a alacritty

ctrl + alt + cmd -r : yabai --restart-service

hyper - b : yabai -m space --layout bsp
hyper - s : yabai -m space --layout stack
hyper - f : yabai -m window --toggle zoom-fullscreen

cmd + alt - f : yabai -m window --toggle float --grid 4:4:1:1:2:2

alt - h : yabai -m window --focus west
alt - j : yabai -m window --focus south
alt - k : yabai -m window --focus north
alt - l : yabai -m window --focus east

shift + alt - h : yabai -m window --swap west
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - l : yabai -m window --swap east

ctrl + alt + cmd - h : yabai -m window --resize left:-50:0; yabai -m window --resize right:-50:0
ctrl + alt + cmd - j : yabai -m window --resize bottom:0:50; yabai -m window --resize top:0:50
ctrl + alt + cmd - k : yabai -m window --resize top:0:-50; yabai -m window --resize bottom:0:-50
ctrl + alt + cmd - l : yabai -m window --resize right:50:0; yabai -m window --resize left:50:0

hyper - j : yabai -m window --focus stack.next 
hyper - k : yabai -m window --focus stack.prev 

cmd + alt - e : yabai -m space --balance

cmd + alt - 1 : yabai -m window --display 1; yabai -m display --focus 1

cmd + alt - 2 : yabai -m window --display 2; yabai -m display --focus 2

hyper - 1 : yabai -m display --focus 1
hyper - 2 : yabai -m display --focus 2
